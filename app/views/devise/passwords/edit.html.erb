<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Nouveau mot de passe</h1>
      <p>Choisissez un nouveau mot de passe sécurisé</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe" %>
        <% if @minimum_password_length %>
          <small style="color: var(--gray-600);">(<%= @minimum_password_length %> caractères minimum)</small>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
      </div>

      <div class="form-group">
        <%= f.submit "Changer mon mot de passe", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

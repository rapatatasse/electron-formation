<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Mot de passe oublié ?</h1>
      <p>Entrez votre email pour réinitialiser votre mot de passe</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Adresse email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
      </div>

      <div class="form-group">
        <%= f.submit "Envoyer les instructions", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Connexion</h1>
      <p>Accédez à votre espace de formation</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Adresse email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
          <%= f.check_box :remember_me, style: "width: auto; margin: 0;" %>
          <%= f.label :remember_me, "Se souvenir de moi", style: "margin: 0; font-weight: normal;" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

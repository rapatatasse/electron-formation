<div class="formation">
    <div class="left-shape"></div>
    
    <% if training.duration.present? %>
        <div class="duration-box"><%= training.duration %></div>
    <% end %>
    
    <header class="page-header">
        <div class="logo-container">
            <div style="width: 50px; height: 50px; b display: flex; align-items: center; justify-content: center; border-radius: 4px;">
                <%= image_tag 'logo.png', alt: 'Logo Electron Formation', style: 'width: 100%; height: 100%; object-fit: contain;' %>
            </div>
        </div>
        <div class="title-container">
            <h1><%= training.title %></h1>
        </div>
    </header>

    <main class="main-content">
        <% if training.description.present? %>
            <div class="description">
                <%= simple_format(training.description) %>
            </div>
            <br>
        <% end %>
        
        <% if training.objective.present? %>
            <div class="top-sections">
                <div class="section-box objectives">
                    <h2>LES OBJECTIFS</h2>
                    <div>
                        <%= simple_format(training.objective) %>
                    </div>
                </div>
            </div>
        <% end %>

        <table class="info-table" cellspacing="0" cellpadding="0">
            <tr>
                <% if training.target_audience.present? %>
                    <td class="grid-item">
                        <div class="grid-title">Public</div>
                        <div class="grid-content"><%= simple_format(training.target_audience) %></div>
                    </td>
                <% end %>
                
                <% if training.training_type.present? %>
                    <td class="grid-item">
                        <div class="grid-title">Modalité</div>
                        <div class="grid-content"><%= training.training_type %></div>
                    </td>
                <% end %>
            </tr>
        </table>

        <% if training.prerequisites.present? %>
            <div class="prerequis-section">
                <div class="grid-title">Prérequis</div>
                <div class="grid-content"><%= simple_format(training.prerequisites) %></div>
            </div>
        <% end %>

        <% if training.program.present? %>
            <div class="deroulement-section">
                <div class="grid-title">Programme</div>
                <div class="deroulement-content"><%= simple_format(training.program) %></div>
            </div>
        <% end %>
    </main>

    <footer class="bottom-banner">
        <table class="banner-table" cellspacing="0" cellpadding="0" width="100%">
            <tr>
                <% if training.evaluation_method.present? %>
                    <td class="banner-item evaluation" width="50%">
                        <h3>ÉVALUATION</h3>
                        <p><%= simple_format(training.evaluation_method) %></p>
                    </td>
                <% end %>
                
                <% if training.teaching_methods.present? %>
                    <td class="banner-item methodes" width="50%">
                        <h3>MÉTHODES PÉDAGOGIQUES</h3>
                        <p><%= simple_format(training.teaching_methods) %></p>
                    </td>
                <% end %>
            </tr>
        </table>
    </footer>

    <div class="page-footer">
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 0; margin-bottom: 0.5rem;">
            <% if training.price_intra_ht.present? %>
                <div style="background: #f0f4f8; padding: 0.75rem 1rem; text-align: center; border-left: 3px solid #64748b;">
                    <div style="font-size: 9pt; font-weight: 700; color: #1e293b; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.5px;">Prix Intra HT</div>
                    <div style="font-size: 18pt; font-weight: 800; color: #1e293b;"><%= training.price_intra_ht %> €</div>
                </div>
            <% end %>
            
            <% if training.price_inter_ht.present? %>
                <div style="background: #dbeafe; padding: 0.75rem 1rem; text-align: center; border-left: 3px solid #3b82f6;">
                    <div style="font-size: 9pt; font-weight: 700; color: #1e293b; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.5px;">Prix Inter HT / Stagiaire</div>
                    <div style="font-size: 18pt; font-weight: 800; color: #1e293b;"><%= training.price_inter_ht %> €</div>
                </div>
            <% end %>
        </div>
        
        <div style="text-align: right; margin-top: 0.5rem;">
            <div class="page-number"><%= page_number %></div>
        </div>
    </div>
</div>

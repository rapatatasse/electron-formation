<%= form_with(model: [:admin, @course], local: true, class: "form") do |f| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@course.errors.count, "erreur") %> empêche(nt) l'enregistrement :</h4>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Titre du cours" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Ex: Introduction à la sécurité" %>
  </div>

  <div class="form-group">
    <%= f.label :slug, "Slug (URL)" %>
    <%= f.text_field :slug, class: "form-control", placeholder: "Ex: intro-securite" %>
    <small class="form-text">Utilisé dans l'URL du cours. Laissez vide pour génération automatique.</small>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Brève description du cours" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Contenu du cours" %>
    <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "Contenu détaillé du cours..." %>
  </div>

  <div class="form-row">
    <div class="form-group" style="flex: 1;">
      <%= f.label :position, "Position" %>
      <%= f.number_field :position, class: "form-control", placeholder: "1" %>
      <small class="form-text">Ordre d'affichage du cours</small>
    </div>

    <div class="form-group" style="flex: 1; margin-left: 1rem;">
      <%= f.label :active, "Statut" %>
      <div style="margin-top: 0.5rem;">
        <%= f.check_box :active, style: "width: auto; margin-right: 0.5rem;" %>
        <%= f.label :active, "Cours actif", style: "font-weight: normal;" %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    <%= link_to "Annuler", admin_courses_path, class: "btn btn-outline" %>
  </div>
<% end %>

<div class="container">
  <div class="page-header">
    <h1 class="page-title">Gestion des cours</h1>
    <%= link_to "Nouveau cours", new_admin_course_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Slug</th>
          <th>Position</th>
          <th>Statut</th>
          <th>Créé le</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><strong><%= course.title %></strong></td>
            <td><code><%= course.slug %></code></td>
            <td><%= course.position %></td>
            <td>
              <% if course.active? %>
                <span class="badge badge-success">Actif</span>
              <% else %>
                <span class="badge badge-secondary">Inactif</span>
              <% end %>
            </td>
            <td><%= l(course.created_at, format: :short) %></td>
            <td>
              <div class="actions">
                <%= link_to "Modifier", edit_admin_course_path(course), class: "btn btn-sm btn-outline" %>
                <%= link_to "Supprimer", admin_course_path(course), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" }, class: "btn btn-sm btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

          <th>Priorit√©</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @trainings.each do |training| %>
          <tr>
            <td><strong><%= training.title %></strong></td>
            <td><%= training.training_type %></td>
            <td><%= training.duration %></td>
            <td><%= training.price_intra_formatted %></td>
            <td><%= training.price_inter_formatted %></td>
            <td><%= training.priority %></td>
            <td>
              <% if training.published %>
                <span class="badge badge-success">Publi√©</span>
              <% else %>
                <span class="badge badge-secondary">Brouillon</span>

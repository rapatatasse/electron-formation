            <td>
              <div class="actions">
                <%= link_to "Voir", admin_training_path(training), class: "btn btn-sm btn-outline" %>
                <%= link_to "Modifier", edit_admin_training_path(training), class: "btn btn-sm btn-outline" %>
                <%= button_to training.published ? "D√©publier" : "Publier", toggle_publish_admin_training_path(training), method: :post, class: "btn btn-sm #{training.published ? 'btn-warning' : 'btn-success'}" %>

<div class="container">
  <div class="page-header">
    <h1 class="page-title">Catalogue de formations</h1>
    <div>
      <%= link_to "üì§ Exporter Excel", export_admin_trainings_path, class: "btn btn-outline" %>
      <%= link_to "üì• Importer Excel", import_admin_trainings_path, class: "btn btn-outline" %>
      <%= link_to "Nouvelle formation", new_admin_training_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Type</th>

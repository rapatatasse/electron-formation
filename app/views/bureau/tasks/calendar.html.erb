<div class="container">
  <div class="page-header" style="display: flex; justify-content: space-between; align-items: center; gap: 1rem;">
    <h1 class="page-title">Vue calendrier (simple)</h1>
    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; justify-content: end;">
      <%= link_to "Liste", bureau_tasks_path, class: "btn btn-outline" %>
      <%= link_to "To do", todo_bureau_tasks_path, class: "btn btn-outline" %>
    </div>
  </div>

  <div class="card" style="margin-bottom: 1rem;">
    <div class="card-body" style="display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap;">
      <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
        <%= link_to "← Précédent", calendar_bureau_tasks_path(start: @prev_start.to_s, days: @days), class: "btn btn-outline" %>
        <%= link_to "Aujourd’hui", calendar_bureau_tasks_path(start: Date.current.to_s, days: @days), class: "btn btn-outline" %>
        <%= link_to "Suivant →", calendar_bureau_tasks_path(start: @next_start.to_s, days: @days), class: "btn btn-outline" %>
      </div>

      <div style="color: var(--gray-700);">
        <strong><%= @start_date %></strong>
        —
        <strong><%= @end_date %></strong>
        (<%= @days %> jours)
      </div>

      <form method="get" action="<%= calendar_bureau_tasks_path %>" style="display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;">
        <input type="hidden" name="days" value="<%= @days %>">
        <label class="form-label" for="calendar_start" style="margin: 0;">Aller au</label>
        <input class="form-control" style="width: 160px;" type="date" id="calendar_start" name="start" value="<%= @start_date %>">
        <button class="btn btn-primary" type="submit">OK</button>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @tasks.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Projet</th>
              <th>Tâche</th>
              <th>Fin</th>
              <th>Progress</th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= task.start_date %></td>
                <td><%= link_to task.project.name, bureau_project_path(task.project) %></td>
                <td><%= link_to task.name, bureau_task_path(task) %></td>
                <td><%= task.end_date %></td>
                <td><%= task.progress %>%</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p style="text-align: center; color: var(--gray-600); padding: 2rem;">Aucune tâche planifiée.</p>
      <% end %>
    </div>
  </div>
</div>

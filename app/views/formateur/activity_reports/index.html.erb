<div class="container">
  <div class="page-header">
    <h1 class="page-title">üë®‚Äçüéì Activit√© (quiz publics)</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <%= form_with url: formateur_activity_reports_path, method: :get, class: "form-group" do |f| %>
        <div style="display: flex; gap: 1rem; align-items: flex-end;">
          <div style="flex: 1;">
            <%= f.label :date, "Mois", class: "form-label" %>
            <%= f.month_field :date, value: @date.strftime('%Y-%m'), class: "form-control" %>
          </div>
          <%= f.submit "Filtrer", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      P√©riode: <%= @report[:period] %>
    </div>
    <div class="card-body">
      <div class="dashboard-grid">
        <div class="stat-card">
          <h3><%= @report[:total_sessions] %></h3>
          <p>Total Sessions</p>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, var(--secondary-color), #059669);">
          <h3><%= @report[:total_participants] %></h3>
          <p>Total Participants</p>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #8b5cf6, #6366f1);">
          <h3><%= @report[:completed_attempts] %></h3>
          <p>Tentatives termin√©es</p>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      üèÜ Top 10 Participants
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Quiz termin√©s</th>
          </tr>
        </thead>
        <tbody>
          <% @report[:top_participants].each_with_index do |participant, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><strong><%= participant[:name] %></strong></td>
              <td><%= participant[:email] %></td>
              <td><span class="badge badge-success"><%= participant[:quizzes_completed] %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      üë• Tous les Participants
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Quiz d√©marr√©s</th>
            <th>Quiz termin√©s</th>
            <th>Score moyen</th>
            <th>Derni√®re activit√©</th>
          </tr>
        </thead>
        <tbody>
          <% @report[:participants_details].each do |participant_detail| %>
            <tr>
              <td><strong><%= participant_detail[:name] %></strong></td>
              <td><%= participant_detail[:email] %></td>
              <td><%= participant_detail[:stats][:quizzes_started] %></td>
              <td><%= participant_detail[:stats][:quizzes_completed] %></td>
              <td>
                <% if participant_detail[:stats][:average_score] %>
                  <%= participant_detail[:stats][:average_score] %>%
                <% else %>
                  <span class="badge badge-warning">N/A</span>
                <% end %>
              </td>
              <td>
                <% if participant_detail[:stats][:last_activity] %>
                  <span style="font-size: 0.875rem;"><%= participant_detail[:stats][:last_activity].strftime('%d/%m/%Y %H:%M') %></span>
                <% else %>
                  <span class="badge badge-warning">Jamais</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

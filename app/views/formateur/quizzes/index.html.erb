<div class="container">
  <div class="page-header">
    <h1 class="page-title">Mes Quiz</h1>
    <%= link_to "Créer un quiz", new_formateur_quiz_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Type</th>
          <th>Questions</th>
          <th>Tentatives</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @quizzes.each do |quiz| %>
          <tr>
            <td><strong><%= quiz.title %></strong></td>
            <td>
              <% if quiz.adaptive? %>
                <span class="badge badge-warning">Adaptatif</span>
              <% else %>
                <span class="badge badge-info">Simple</span>
              <% end %>
            </td>
            <td><%= quiz.questions.count %></td>
            <td><%= quiz.quiz_attempts.count %></td>
            <td>
              <% if quiz.active? %>
                <span class="badge badge-success">Actif</span>
              <% else %>
                <span class="badge badge-secondary">Inactif</span>
              <% end %>
            </td>
            <td>
              <div class="actions">
                <%= link_to "Voir", formateur_quiz_path(quiz), class: "btn btn-sm btn-outline" %>
                <%= link_to "Modifier", edit_formateur_quiz_path(quiz), class: "btn btn-sm btn-outline" %>
                <%= link_to "Questions", formateur_quiz_questions_path(quiz), class: "btn btn-sm btn-primary" %>
                <%= button_to "Supprimer", formateur_quiz_path(quiz), method: :delete, :onclick => "return confirm('Êtes vous sûr ?')", class: "btn btn-sm btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
